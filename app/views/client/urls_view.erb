<div class="row">
  <div class="col-md-6">
    <h3>Path: <%= @url.url_path %></h3>
  </div>
  <div class="col-md-6">
    <h3>Client: <a href="/sources/<%= @client.identifier %>"><%= @client.identifier.capitalize %></a></h3>
  </div>
</div>
<p><b>Average Response Time: </b><%= @url.payload_requests.average_response_time %></p>
<p><b>Max Response Time: </b><%= @url.payload_requests.max_response_time %></p>
<p><b>Min Response Time: </b><%= @url.payload_requests.min_response_time %></p>
<p><b>Most Used Request Type: </b><%= @url.payload_requests.most_used_request_type %></p>
<p><b>Screen Resolution Report: </b><%= @url.payload_requests.get_screen_resolution_report(url_id: @url.id) %></p>
<p><b>All Response Times: </b><%= @url.payload_requests.listed_response_times %></p>
<p><b>Top Referrers: </b><%= @url.payload_requests.top_referrers %></p>
<p><b>Top User Agents: </b><%= @url.payload_requests.top_agents %></p>
<a href="/sources/<%= @client.identifier %>">Back to <%= @client.identifier.capitalize %></a>


<%= breakdown_table(@url.payload_requests.os_breakdown(url_id: @url.id), "OS") %>
<%= breakdown_table(@url.payload_requests.browser_breakdown(url_id: @url.id), "Browser") %>
<%= breakdown_table(@url.payload_requests.all_http_verbs(url_id: @url.id), "HTTP Verbs") %>
